{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@ui/*": ["packages/ui/src/*"],
      "@types/*": ["packages/types/src/*"],
      "@mocks/*": ["packages/mocks/src/*"]
    },

    "composite": true,
    "declaration": true,
    "declarationMap": true
  }
}
