{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@rp-ui": ["packages/ui/src/index.ts"],
      "@rp-types": ["packages/types/src/index.ts"],
      "@rp-mocks": ["packages/mocks/src/index.ts"]
    },

    "composite": true,
    "declaration": true,
    "declarationMap": true
  }
}
